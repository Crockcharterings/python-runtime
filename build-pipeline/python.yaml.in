# Use flex builder pipeline to build final application Docker image
#
# Note that _OUTPUT_IMAGE is substituted by a different process, at a
# later time, than the other variables.
steps:
# Generate application Dockerfile
- name: '${DOCKER_NAMESPACE}/build-pipeline/gen-dockerfile:${CANDIDATE}'
  args: [
    '--runtime-prefix=${DOCKER_NAMESPACE}',
    '--runtime-suffix=${CANDIDATE}'
  ]
# Use Dockerfile to create final application image
- name: 'gcr.io/cloud-builders/docker'
  args: ['build', '-t', '$_OUTPUT_IMAGE', '.']
images:
 - '$_OUTPUT_IMAGE' 
